<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/1.20.1/src/main/resources/assets/blockui/gui/block_ui.xsd"
    size="190 244">
    <image source="minecolonies:textures/gui/builderhut/builder_paper.png" size="190 244"/>

    <!-- Title -->
    <text id="desc" size="130 11" pos="30 14" textalign="MIDDLE" color="black"
          label="$(com.supplylines.gui.stockkeeper.settings)"/>

    <!-- Settings List -->
    <list id="settings" size="164 194" pos="16 40"
          emptytext="$(com.supplylines.gui.stockkeeper.settings.empty)" emptycolor="black">
        <box size="100% 36" linewidth="1" linecolor="#a0a0a0">
            <!-- Row 1: Setting label -->
            <text id="label" size="150 12" pos="4 4" color="black"/>

            <!-- Row 2: Input field for integers -->
            <input id="input" size="60 16" pos="4 18" maxlength="6"/>

            <!-- Value text for booleans -->
            <text id="value" size="80 12" pos="4 20" color="gray"/>

            <!-- Toggle button -->
            <button id="toggle" pos="130 16" size="18 17"
                    source="minecolonies:textures/gui/builderhut/builder_button_very_small.png" color="black"/>
        </box>
    </list>
</window>
