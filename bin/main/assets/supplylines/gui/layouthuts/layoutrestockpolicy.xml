<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/1.20.1/src/main/resources/assets/blockui/gui/block_ui.xsd"
    size="190 244">
    <image source="minecolonies:textures/gui/builderhut/builder_paper.png" size="190 244"/>

    <!-- Title -->
    <text id="desc" size="130 11" pos="30 14" textalign="MIDDLE" color="black"
          label="$(com.supplylines.gui.stockkeeper.restockpolicy)"/>

    <!-- Add Button -->
    <button id="add" size="86 17" pos="50 30" color="black"
            source="minecolonies:textures/gui/builderhut/builder_button_medium.png"
            label="$(com.supplylines.gui.stockkeeper.restockpolicy.add)"/>

    <!-- Policy List -->
    <list id="policies" size="170 180" pos="13 50"
          emptytext="$(com.supplylines.gui.stockkeeper.restockpolicy.empty)" emptycolor="black">
        <box size="100% 20" linewidth="1">
            <!-- Item icon -->
            <itemicon id="itemicon" size="17 17" pos="2 1"/>

            <!-- Item name -->
            <text id="itemname" size="70 12" pos="22 4" color="black"/>

            <!-- Target quantity -->
            <text id="target" size="25 12" pos="95 4" color="black" textalign="RIGHT"/>

            <!-- Current stock (optional display) -->
            <text id="current" size="20 12" pos="120 4" color="gray" textalign="RIGHT"/>

            <!-- Remove button -->
            <button label="X" id="remove" pos="145 2" size="20 15"
                    source="minecolonies:textures/gui/builderhut/builder_button_very_small.png" color="red"/>
        </box>
    </list>
</window>
